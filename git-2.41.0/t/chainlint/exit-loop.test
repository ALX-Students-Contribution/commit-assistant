(
	for i in a b c
	do
# LINT: "|| exit {n}" valid for-loop escape in subshell; no "&&" needed
		foo || exit 1
		bar &&
		baz
	done
) &&
(
	while true
	do
# LINT: "|| exit {n}" valid while-loop escape in subshell; no "&&" needed
		foo || exit 1
		bar &&
		baz
	done
) &&
(
	i=0 &&
	while test $i -lt 10
	do
# LINT: "|| exit" (sans exit code) valid escape in subshell; no "&&" needed
		echo $i || exit
		i=$(($i + 1))
	done
)
