(
# LINT: "while", "do", "done" do not need "&&"
	while true
	do
# LINT: missing "&&" on "echo"
		echo foo
# LINT: last statement of while does not need "&&"
		cat <<-\EOF
		bar
		EOF
# LINT: missing "&&" on "done"
	done

# LINT: "do" on same line as "while"
	while true; do
		echo foo &&
		cat bar
	done
)
